<AuthorizeView>
    <Authorized>
        <a href="~/Manage">Hello, @context.User.Identity?.Name!</a>
        <form method="post" action="/Logout">
            <button type="submit" class="nav-link btn btn-link">Log out</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a href="~/Register">Register</a>
        <a href="~/Login">Log in</a>
    </NotAuthorized>
</AuthorizeView>

